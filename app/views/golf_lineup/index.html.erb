<div class="content container">
  <div class="col-md-11">

  <div class="row">
    <div class="thumbnail">
        <img src="/assets/img/ball_sky.jpg" alt="">
    </div>
  </div>

  
  <div class="row" style="margin-left: -20px">
      <% lineup = @golf_lineups.first%>
      <div class="col-md-2 col-sm-4 col-xs-6">
          <div class="box">
              <div class="icon">
                  <%= lineup.rank %>
              </div>
              <div class="description">
                  <span class="glyphicon glyphicon-upload"></span> Ranking 
              </div>
          </div>
      </div>
      <div class="col-md-2 col-sm-4 col-xs-6">
          <div class="box">
              <div class="big-text">
                  <%= lineup.dk_score %>
              </div>
              <div class="description">
                  <i class="fa fa-bar-chart"></i>
                  DraftKings Score
              </div>
          </div>
      </div>

      <div class="col-md-4 col-sm-4 col-xs-6">
          <div class="box">
              <div class="big-text" style="font-size: 26px">
                  <i class="fa fa-trophy"></i> Leading Lineup <i class="fa fa-trophy"></i>
              </div>
              <div class="description">
                  <p>Jordan Speith - Paul Casey - Emilio Grillo</p> <p>Ricky Fowler - Hideki Masuyama -  Keegan Bradley</p>
              </div>
          </div>
      </div>
      <div class="col-md-2 col-sm-4 col-xs-6">
          <div class="box">
              <div class="big-text" style="font-size: 26px">
                  $<%= '%.2f' % lineup.expected_payout %>
              </div>
              <div class="description">
                  Equity
                  <i class="fa fa-money"></i>
              </div>
          </div>
      </div>
      <div class="col-md-2 col-sm-4 col-xs-6">
          <div class="box">
              <div class="icon">
                  <%= '%.2f' % (lineup.probability_win*100) %>%</strong>
              </div>
              <div class="description">
                  Chance to <strong>Win</strong>
                  <i class="fa fa-ticket"></i>
              </div>
          </div>
      </div>
  </div>

  <br/>

  <i><h2 class="page-title" style="margin-left: -14px">Your <span class="fw-semi-bold">Lineups</span> <small>blah blah blah</small></i></h2></i>
  <div class="row">
        <section class="widget">
           <br>
           <div class="table-responsive">
              <table class="table table-hover" id="table">
                 <thead>
                    <tr>
                       <th>Rank <span class="glyphicon glyphicon-resize-vertical"></span></th>
                       <th>DK Score <i class="fa fa-bar-chart"></i></th>
                       <th>Lineup <i class="fa fa-trophy"></i></th>
                       <th>Win %</th>
                       <th>Make Cut %</th>
                       <th>MDF %</th>
                       <th>Expected Payout <i class="fa fa-money"></i></th>
                       <th colspan="3"></th>
                    </tr>
                 </thead>
                 <tbody>
                    <% @golf_lineups.each do |lineup| %> 
                    <tr>
                       <td><%= lineup.rank %></td>
                       <td><%= lineup.dk_score %></td>
                       <td>
                        <div class="col-md-12 move">
                          <div class="panel-group" id="accordion3">
                              <div class="panel">
                                  <div class="panel-heading">
                                      <a class="accordion-toggle collapsed" id="lineup-drop" data-toggle="collapse" href="#collapseOneTwo">Golfers
                                      </a>
                                  </div>
                                  <div id="collapseOneTwo" class="panel-collapse collapse">
                                      <div class="panel-body" style="text-align: center">
                                        <ul>
                                          <li>Tiger Woods</li>
                                          <li>Jordan Spleth</li>
                                          <li>Jason Day</li>
                                          <li>Rory Mcllroy</li>
                                          <li>Bubba Watson</li>
                                          <li>Rickie Fowler</li>
                                        </ul>
                                          <br>
                                      </div>
                                  </div>
                              </div>
                          </div>
                       </td>
                       <td><%= '%.2f' % (lineup.probability_win*100) %>%</td>
                       <td><%= '%.2f' % (lineup.probability_mc*100) %>%</td>
                       <td><%= '%.2f' % (lineup.probability_mf*100) %>%</td>
                       <td>$<%= '%.2f' % (lineup.expected_payout.to_s) %></td>
                    </tr>
                    <% end %>
                 </tbody>
              </table>
           </div>
     </div>

     <i><h2 class="page-title" style="margin-left: -14px">Total <span class="fw-semi-bold">Lineups</span> <small>blah blah blah</small></i></h2></i>
  <div class="row">
        <section class="widget">
           <br>
           <div class="table-responsive">
              <table class="table table-hover" id="table">
                 <thead>
                    <tr>
                       <th>Rank <span class="glyphicon glyphicon-resize-vertical"></span></th>
                       <th>DK Score <i class="fa fa-bar-chart"></i></th>
                       <th>Lineup <i class="fa fa-trophy"></i></th>
                       <th>Win %</th>
                       <th>Make Cut %</th>
                       <th>MDF %</th>
                       <th>Expected Payout <i class="fa fa-thumbs-up"></i></th>
                       <th colspan="3"></th>
                    </tr>
                 </thead>
                 <tbody>
                    <% @golf_lineups.each do |lineup| %> 
                    <tr>
                       <td><%= lineup.rank %></td>
                       <td><%= lineup.dk_score %></td>
                       <td>
                        <div class="col-md-12 move">
                          <div class="panel-group" id="accordion3">
                              <div class="panel">
                                  <div class="panel-heading">
                                      <a class="accordion-toggle collapsed" id="lineup-drop" data-toggle="collapse" href="#collapseOneTwo">Golfers
                                      </a>
                                  </div>
                                  <div id="collapseOneTwo" class="panel-collapse collapse">
                                      <div class="panel-body" style="text-align: center">
                                        <ul>
                                          <li>Tiger Woods</li>
                                          <li>Jordan Spleth</li>
                                          <li>Jason Day</li>
                                          <li>Rory Mcllroy</li>
                                          <li>Bubba Watson</li>
                                          <li>Rickie Fowler</li>
                                        </ul>
                                          <br>
                                      </div>
                                  </div>
                              </div>
                          </div>
                       </td>
                       <td><%= lineup.probability_win*100 %>%</td>
                       <td><%= lineup.probability_mc*100 %>%</td>
                       <td><%= lineup.probability_mf*100 %>%</td>
                       <td>$<%= lineup.expected_payout.to_s %></td>
                    </tr>
                    <% end %>
                 </tbody>
              </table>
           </div>
     </div>
     </section>
  </div>
</div>
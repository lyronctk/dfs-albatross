<h3>Welcome</h3>

<p>
	<%= link_to "Create an account", "/auth/identity/register" %>
</p>

<% flash.each do |key, value| %>
   <div class="alert alert-<%= key %>"><%= value %></div>
 <% end %>

<div class="block-center mt-xl wd-xl">
   <!-- START panel-->	
   <div class="panel panel-dark-transparent panel-flat">
      <div class="panel-heading text-center">
         <a href="#">
            <img src="<%= image_path('angle/logo.png') %>" alt="Contigo.io" class="block-center img-rounded" />
         </a>
      </div>
      <div class="panel-body">
         <p class="text-center pv">SIGN IN TO CONTINUE.</p>

         <!-- Login with idenity -->
         <%= form_tag "auth/identity/callback" do %>
         	<div class="form-group has-feedback">
               <%= text_field_tag :auth_key, nil, placeholder: 'Enter your email' %>
               <span class="fa fa-envelope form-control-feedback text-muted"></span>
            </div>
            <div class="form-group has-feedback">
               <%= password_field_tag :password, nil, placeholder: 'Password' %>
               <span class="fa fa-lock form-control-feedback text-muted"></span>
            </div>
            <button type="submit" class="btn btn-block btn-primary mt-lg">Login</button>
         <% end %>

      </div>
   </div>
   <!-- END panel-->
</div>




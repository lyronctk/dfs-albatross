<h2 class="page-title">Top<span class="fw-semi-bold"> Golfers</span></h2>

<div class="row">
   <div class="col-md-11">
      <section class="widget">

         <header>
            <h5>Top <span class="fw-semi-bold">Golfers</span></h5>
        </header>
         <div class="table-responsive">
            <table class="table table-hover">
               <thead>
                  <tr>
                     <th>Rank</th>
                     <th>Name</th>
                     <th>Score to Par</th>
                     <th>Hole</th>
                     <th>Probability to Win</th>
                     <th>Probability to Make Cut</th>
                     <th>Probability of MDF</th>
                     <th>Stats</th>
                     <th colspan="3"></th>
                  </tr>
               </thead>
               <tbody>
            <% @golfers.each do |golfer| %> 
            <tr>
               <td><%= golfer.rank %></td>
               <td><%= golfer.name %></td>
               <td><%= golfer.score_to_par %></td>
               <td><%= 'R' + golfer.last_update_round.to_s + ' : H' + golfer.last_update_hole.to_s %></td>
               <td><%= (golfer.probability_win*100.0).to_s + '%' %></td>
               <td><%= (golfer.probability_make_cut*100.0).to_s + '%' %></td>
               <td><%= (golfer.probability_mdf*100.0).to_s + '%' %></td>
               <td><%= golfer.stats %></td>
            </tr>
            <% end %>
         </tbody>
            </table>
         </div>
   </div>
   </section>
</div>
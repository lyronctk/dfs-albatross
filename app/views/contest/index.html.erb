<div class="content container">
   <h2 class="page-title"><i>Live<span class="fw-semi-bold"> Contests</span></i></h2>
   <div class="row">
      <div class="col-md-11">
         <section class="widget">
            <br>
            <div class="table-responsive">
               <table class="table table-hover" id="table">
                  <thead>
                     <tr>
                        <th>Name <i class="fa fa-pencil-square-o"></i></th>
                        <th>Type <i class="fa fa-database"></i></th>
                        <th>Entry Price <i class="fa fa-money"></i></th>
                        <th>Entries #</span></th>
                        <th>To Win %</th>
                        <th>Expected Payoff <i class="fa fa-ship"></i></th>
                        <th colspan="3"></th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @contests.each do |contest| %> 
                     <tr>
                        <td><%=contest.name%></td>
                        <td><%=contest.contest_type%></td>
                        <td>$<%='%.2f' % contest.entry_price%></td>
                        <td><%=contest.num_entries%></td>
                        <td><%= (contest.win*100.0).to_s%>%</td>
                        <td>$<%=contest.expected_payoff.to_s%></td>
                     </tr>
                     <% end %>
                  </tbody>
               </table>
            </div>
      </div>
      </section>
   </div>
</div>
<div class="content container">
   <h2 class="page-title"><i>Live<span class="fw-semi-bold"> Contests</span></i></h2>
   <div class="row">
      <div class="col-md-11">
         <section class="widget">
            <br>
            <div class="table-responsive">
               <table class="table table-hover" id="table">
                  <thead>
                     <tr>
                        <th>Contest Name <i class="fa fa-ticket"></i></i></th>
                        <th>Type <i class="fa fa-database"></i></th>
                        <th>Entry Price <i class="fa fa-money"></i></th>
                        <th>Entries #</span></th>
                        <th>To Win %</th>
                        <th>Expected Payoff <i class="fa fa-ship"></i></th>
                        <th colspan="3"></th>
                     </tr>
                  </thead>
                  <tbody>
                     <% @contests.each do |contest| %> 
                     <tr>
                        <td><%= link_to contest.name, index_specific_path(:name => contest.name) %></td>
                        <td><%= link_to contest.contest_type, index_specific_path(:name => contest.name) %></td>
                        <td><%= link_to "$#{'%.2f' % contest.entry_price}", index_specific_path(:name => contest.name) %></td>
                        <td><%= link_to contest.num_entries, index_specific_path(:name => contest.name) %></td>
                        <td><%= link_to "#{'%.2f' % (contest.win*100.0).to_s}%", index_specific_path(:name => contest.name) %></td>
                        <td><%= link_to "$#{'%.2f' % contest.expected_payoff.to_s}", index_specific_path(:name => contest.name) %></td>
                     </tr>
                     <% end %>
                  </tbody>
               </table>
            </div>
      </div>
      </section>
   </div>
</div>